[user]
    name = Dmitry Medvinsky
    email = me@dmedvinsky.name
    useConfigOnly = true

[core]
    whitespace = fix,trailing-space,space-before-tab,cr-at-eol
    editor = vim
    pager = less -FRSX
[pull]
    ff = only
[push]
    default = tracking
[branch]
    autosetupmerge = true

[help]
    autocorrect = -1
[advice]
    pushNonFastForward = false
    statusHints = false

[color]
    ui = auto
    diff = auto
    status = auto
    log = auto
    grep = auto
    interactive = auto
    pager = true
[apply]
    whitespace = fix
[diff]
    renames = copies
[merge]
    stat = true
    conflictstyle = diff3

[alias]
    unstage = reset HEAD

    tags = tag -l
    branches = branch -a
    remotes = remote -v

    root = rev-parse --show-toplevel
    currentbranch = !git branch --contains HEAD | grep '*' | tr -s ' ' | cut -d ' ' -f2

    o = checkout
    s = status
    b = branch -a

[filter "lfs"]
    clean = git-lfs clean -- %f
    smudge = git-lfs smudge -- %f
    process = git-lfs filter-process
    required = true

